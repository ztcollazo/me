---
import Header from '@/components/Header';
import Footer from '@/components/Footer';
import '@/styles/globals.css';
import 'claymorphism-css/dist/clay.css';
import 'highlight.js/styles/obsidian.css'

export interface Props {
  title?: string
}

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
	<title>{title && `${title} | `}Zachary Collazo</title>
	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
</head>
<body class="bg-gray-50 sm:p-5 p-3 dark:bg-gray-800 text-black dark:text-white flex flex-col justify-between">
  <Header client:load />
	<main class="py-5 max-w-full min-h-[74vh] flex flex-col gap-5 items-center">
		<slot />
	</main>
  <Footer />
</body>
</html>